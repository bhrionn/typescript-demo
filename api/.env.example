# Environment
NODE_ENV=development

# Database Configuration
DATABASE_URL=postgresql://user:pass@postgres:5432/appdb
DB_SECRET_NAME=typescript-demo-dev-db-credentials
DB_MAX_CONNECTIONS=10

# AWS Configuration
AWS_REGION=us-east-1
AWS_ENDPOINT=http://localstack:4566
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test

# Application Configuration
JWT_SECRET=local-dev-secret-key-change-in-production
S3_BUCKET_NAME=typescript-demo-dev-file-uploads
COGNITO_USER_POOL_ID=us-east-1_localpool

# For production, update these values:
# NODE_ENV=production
# DATABASE_URL=postgresql://user:pass@your-rds-endpoint:5432/appdb
# AWS_REGION=us-east-1
# Remove AWS_ENDPOINT (use real AWS services)
# Remove AWS_ACCESS_KEY_ID and AWS_SECRET_ACCESS_KEY (use IAM roles)
# JWT_SECRET=<secure-random-secret>
# S3_BUCKET_NAME=your-production-bucket
# COGNITO_USER_POOL_ID=us-east-1_xxxxx
