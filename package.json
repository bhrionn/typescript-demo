{
  "name": "typescript-demo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "web-app",
    "api",
    "infrastructure"
  ],
  "scripts": {
    "install:all": "npm install && npm install --workspace=web-app && npm install --workspace=api && npm install --workspace=infrastructure",
    "build": "npm run build --workspaces",
    "type-check": "npm run type-check --workspaces",
    "test": "npm run test --workspaces",
    "lint": "npm run lint --workspaces",
    "lint:fix": "npm run lint:fix --workspaces",
    "format": "prettier --write \"**/*.{ts,tsx,js,json,md}\" --ignore-path .prettierignore",
    "prepare": "husky install",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:restart": "docker-compose restart",
    "docker:clean": "docker-compose down -v",
    "docker:build": "docker-compose build",
    "docker:ps": "docker-compose ps",
    "docker:wait": "bash docker/wait-for-services.sh",
    "docker:start": "npm run docker:up && npm run docker:wait"
  },
  "devDependencies": {
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.0"
  }
}
